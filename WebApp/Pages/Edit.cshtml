@page
@model EditModel
@{
    ViewData["Title"] = "Editar error";
}

<div class="text-center">
    <h1 class="display-4">Editar error</h1>
    <form method="post">
        <div>
            <label for="Description">Descripci√≥n:</label>
            <input id="Description" type="text" name="Description" value="@Model.Error.Description" required />
        </div>
        <div>
            <label for="ProyectoId">Proyecto:</label>
            <select id="ProyectoId" name="ProyectoId" required>
                @foreach (var proyecto in Model.Proyectos)
                {
                    <option value="@proyecto.ProyectoId" @(proyecto.ProyectoId == Model.Error.ProyectoId ? "selected" : "")>@proyecto.Name</option>
                }
            </select>
        </div>
        <div>
            <label for="UserId">Usuario:</label>
            <select id="UserId" name="UserId" required>
                @foreach (var user in Model.Usuarios)
                {
                    <option value="@user.UserId" @(user.UserId == Model.Error.UserId ? "selected" : "")>@user.Name</option>
                }
            </select>
        </div>
        <div>
            <input type="submit" value="Guardar" />
        </div>
    </form>
</div>
